@page "/"

<PageTitle>PetPal - Your Pet's Best Friend</PageTitle>

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="bg-primary text-white py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="display-4 fw-bold">Welcome to PetPal</h1>
                    <p class="lead">Your one-stop solution for tracking and caring for your beloved pets.</p>
                    <a href="/userform" class="btn btn-light btn-lg">Add Your Pet</a>
                </div>
                <div class="col-md-6">
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container py-5">
        <h2 class="text-center mb-5">Why Choose PetPal?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar-check display-4 text-primary mb-3"></i>
                        <h3>Vaccination Tracking</h3>
                        <p>Never miss your pet's important vaccinations and check-ups.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-heart-pulse display-4 text-primary mb-3"></i>
                        <h3>Health Monitoring</h3>
                        <p>Track your pet's health metrics and medical history.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-bell display-4 text-primary mb-3"></i>
                        <h3>Smart Reminders</h3>
                        <p>Get notified about feeding times, medications, and appointments.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pet Types Section -->
    <div class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-5">We Care for All Pets</h2>
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <h5>Dogs</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <h5>Cats</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <h5>Birds</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <h5>Other Pets</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h2>Ready to Start Caring for Your Pet?</h2>
                <p class="lead">Join thousands of pet owners who trust PetPal for their pet care needs.</p>
                <a href="/userform" class="btn btn-primary btn-lg">Get Started Now</a>
            </div>
        </div>
    </div>
</div>

